///appending a string
#include<stdio.h>
#include<string.h>
int main()
{
	char s1[10],s2[10],s3[20];
	int i,j,k,m,n;
	printf("Enter a string= ");
	scanf("%s",s1);
	printf("Enter another string= ");
	scanf("%s",s2);
	char space;
	space=32;
	m=strlen(s1);
	n=strlen(s2);
	printf("%d",m);
	printf("\n%d\n",n);
	for (i=0,j=0,k=0;i<(m+n);i++,k++)
	{
		if(i<=n-1)
		s3[k]=s1[i];
		else if(i==n)
		s3[k]=space;
		else
		{
		s3[k]=s2[j];
		j++;
		}
	}
	printf("%s",s3);
}
